@echo off
REM Скрипт для восстановления базы данных из резервной копии

if "%~1"=="" (
  echo Ошибка: Не указан файл резервной копии
  echo Использование: restore.bat путь_к_файлу_резервной_копии
  exit /b 1
)

echo Восстановление базы данных из файла: %1
node %~dp0\backup.js restore %1
echo Готово!
pause
